# Documentation/Howto:
# https://wiki.archlinux.org/index.php/Shutting_system_down_by_pressing_the_power_button

set -e

. /etc/default/enterprisestoragebox
. /usr/share/enterprisestoragebox/scripts/helper-functions

ESB_ACPID_DEFAULT=${ESB_ACPID_DEFAULT:-"/etc/default/acpid"}
ESB_ACPID_OPTIONS=${ESB_ACPID_OPTIONS:-""}
ESB_ACPID_MODULES=${ESB_ACPID_MODULES:-"button"}
ESB_ACPID_POWERBTN_EVENT_FILE=${ESB_ACPID_POWERBTN_EVENT_FILE:-"/etc/acpi/events/powerbtn"}
ESB_ACPID_POWERBTN_ACTION_SHUTDOWN=${ESB_ACPID_POWERBTN_ACTION_SHUTDOWN:-"shutdown -h -P now \"Power button pressed\""}
ESB_ACPID_POWERBTN_ACTION_STANDBY=${ESB_ACPID_POWERBTN_ACTION_STANDBY:-"esb-pm-standby"}

mkconf() {
	# Create '/etc/default/acpid' file
	cat <<EOF > ${ESB_ACPID_DEFAULT}
# Options to pass to acpid
#
# OPTIONS are appended to the acpid command-line
OPTIONS="${ESB_ACPID_OPTIONS}"

# Linux kernel modules to load before starting acpid
MODULES="${ESB_ACPID_MODULES}"
EOF

	# Create '/etc/acpi/events/powerbtn' file. Note, the file must be
	# named exactly the same in order to prevent the execution of the
	# script '/etc/acpi/events/powerbtn-acpi-support' which is shipped
	# with the Debian package 'acpi-support-base'.
	xmlstarlet sel -t -m "//system/powermanagement" \
	  -o "# This configuration file is auto-generated." -n \
	  -o "# WARNING: Do not edit this file, your changes will be lost." -n \
	  -o "event=button[ /]power (PWR.||PBTN)" -n \
	  -i "powerbtn[. = 'nothing']" -o "#action=" -b \
	  -i "powerbtn[. = 'shutdown']" -o "action=${ESB_ACPID_POWERBTN_ACTION_SHUTDOWN}" -b \
	  -i "powerbtn[. = 'standby']" -o "action=${ESB_ACPID_POWERBTN_ACTION_STANDBY}" -b \
	  ${ESB_CONFIG_FILE} | xmlstarlet unesc > ${ESB_ACPID_POWERBTN_EVENT_FILE}
}

case "$1" in
	mkconf|*)
		mkconf
		;;
esac
