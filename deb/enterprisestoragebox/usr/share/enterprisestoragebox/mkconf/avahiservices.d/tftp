set -e

. /etc/default/enterprisestoragebox
. /usr/share/enterprisestoragebox/scripts/helper-functions

ESB_AVAHIDAEMON_TFTPSERVICE=${ESB_AVAHIDAEMON_TFTPSERVICE:-"/etc/avahi/services/tftp.service"}

# Is the service enabled? Announce this service via DNS-SD?
rm -f ${ESB_AVAHIDAEMON_TFTPSERVICE}
[ "$(esb_config_get "//services/tftp/enable")" != "1" -o "$(esb_config_get "//services/zeroconf/services/service[id='tftp']/enable")" != "1" ] && exit 0

# Create '/etc/avahi/services/tftp.service' file.
port=$(esb_config_get "//services/tftp/port")
name=$(esb_config_get "//services/zeroconf/services/service[id='tftp']/name")
cat <<EOF > ${ESB_AVAHIDAEMON_TFTPSERVICE}
<?xml version="1.0" standalone='no'?>
<!DOCTYPE service-group SYSTEM "avahi-service.dtd">
<service-group>
  <name replace-wildcards="yes">${name}</name>
  <service>
    <type>_tftp._udp</type>
    <port>${port}</port>
  </service>
</service-group>
EOF
