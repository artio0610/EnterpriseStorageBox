# Documentation/Howto:
# http://www.debian.org/doc/manuals/debian-reference/ch05.en.html#_the_hostname_resolution

set -e

. /etc/default/enterprisestoragebox
. /usr/share/enterprisestoragebox/scripts/helper-functions

ESB_HOSTS_CONFIG=${ESB_HOSTS_CONFIG:-"/etc/hosts"}

# If the hostname is a FQDN, then extract the hostname part and store it
# in the alias variable.
hostname=$(esb_config_get "//system/network/hostname")
domainname=$(esb_config_get "//system/network/domainname")
fqdn="${hostname}"
alias=""
if [ -n "${domainname}" ]; then
	fqdn="${hostname}.${domainname}"
	alias="${hostname}"
fi

# Create /etc/hosts file
cat <<EOF > ${ESB_HOSTS_CONFIG}
# This configuration file is auto-generated.
# WARNING: Do not edit this file, your changes will be lost.
127.0.0.1 localhost
127.0.1.1 ${fqdn} ${alias}

# The following lines are desirable for IPv6 capable hosts
::1     ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
ff02::3 ip6-allhosts

EOF

xmlstarlet sel -t -m "//system/network/interfaces/*" \
  -v "concat(devicename,' ',address,' ',address6)" \
  -i "position() != last()" -n -b \
  ${ESB_CONFIG_FILE} | xmlstarlet unesc |
  while read devicename address address6; do
	  if [ -n "${address}" ]; then
		  if [ -n "${alias}" ]; then
			  echo "${address} ${fqdn} ${alias}" >> ${ESB_HOSTS_CONFIG}
		  else
			  echo "${address} ${fqdn}" >> ${ESB_HOSTS_CONFIG}
		  fi
	  fi
	  if [ -n "${address6}" ]; then
		  if [ -n "${alias}" ]; then
			  echo "${address6} ${fqdn} ${alias}" >> ${ESB_HOSTS_CONFIG}
		  else
			  echo "${address6} ${fqdn}" >> ${ESB_HOSTS_CONFIG}
		  fi
	  fi
  done
